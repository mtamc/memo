      {{ scripts | safe }}
    </script>
  </head>
  <body>
    <div id="site"></div>
    <script>
      const refreshTokenWhenNecessary = async (isFirst) => {
        if (!isFirst) {
          console.log('force-refreshing the token!')
          await netlifyIdentity?.currentUser?.()?.jwt?.(true)
        }
        const expiryDate = netlifyIdentity?.currentUser?.()?.token?.expires_at ?? 0
        const delayUntilRefresh = Math.min(600000, Math.max(0, (expiryDate - Date.now()) / 2.1))
        console.log(`refreshing in ${delayUntilRefresh/1000/60} minutes`)
        window.setTimeout(refreshTokenWhenNecessary, delayUntilRefresh)
      }

      netlifyIdentity.on('init', user => console.log('init', user));
      netlifyIdentity.on('login', user => console.log('login', user));
      netlifyIdentity.on('logout', () => console.log('Logged out'));
      netlifyIdentity.on('error', err => console.error('Error', err));
      netlifyIdentity.on('open', () => console.log('Widget opened'));
      netlifyIdentity.on('close', () => console.log('Widget closed'));

      // The 0 timeout is necessary to detect netlify auth token
      window.setTimeout(async () => {
        refreshTokenWhenNecessary(true)
        // Include the router
        Components.setContent('#site', Components.Router())
      }, 0)
    </script>
  </body>
